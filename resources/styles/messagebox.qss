/* messagebox.qss */

/* QMessageBox 样式 */
QMessageBox {
    background-color: #ffffff; /* 白色背景 */
    border: 1px solid #dcdcdc; /* 浅灰色边框 */
    border-radius: 8px;        /* 圆角边框 */
}

QMessageBox QLabel {
    background: transparent; /* 背景透明 */
    color: #333333;          /* 深灰色文字 */
    font-size: 14pt;         /* 字体大小 */
    font-family: "Microsoft YaHei", "Segoe UI", Arial, sans-serif;
}
