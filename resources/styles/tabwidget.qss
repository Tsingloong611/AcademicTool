/* tabwidget.qss */

QTabWidget::pane {
    border: 1px solid #dcdcdc;
    border-radius: 4px;
}

QTabBar::tab {
    background: #f0f0f0;
    padding: 10px;
    margin: 2px;
    border-radius: 4px;
}

QTabBar::tab:selected {
    background: #ffffff;
    border-bottom: 2px solid #0078d7; /* 蓝色下边框 */
}

QTabBar::tab:hover {
    background: #e6f7ff;
}
